{
  "name": "TOSS4 Spheral GCC 13 Dev",
  "build": {
    "dockerfile": "../Dockerfile",
    "context": ".."
  },
  "workspaceFolder": "/workspaces/spheral",
  "workspaceMount": "source=${localEnv:HOME}/projects/spheral,target=/workspaces/spheral,type=bind",
  "mounts": [
    "source=${localEnv:HOME}/.ssh,target=/home/martymcf/.ssh,type=bind,readonly",
    "source=${localEnv:HOME}/.container-data/toss4-spheral-gcc13/.zsh_history,target=/home/martymcf/.zsh_history,type=bind"
  ],
  "runArgs": [
    "--hostname=toss4-dev-container",
    "--volume=${env:SSH_AUTH_SOCK}:/ssh-agent:z",
    "--env=SSH_AUTH_SOCK=/ssh-agent"
  ],
  "remoteUser": "martymcf",
  "userEnvProbe": "none",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cpptools-extension-pack",
        "ms-vscode.cmake-tools",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-vscode.makefile-tools",
        "eamodio.gitlens"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "zsh": {
            "path": "/usr/bin/zsh"
          }
        },
        "C_Cpp.default.compilerPath": "/usr/bin/g++-13",
        "C_Cpp.default.cStandard": "c17",
        "C_Cpp.default.cppStandard": "c++20",
        "C_Cpp.default.intelliSenseMode": "linux-gcc-x64",
        "python.defaultInterpreterPath": "/usr/bin/python3",
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true,
        "editor.formatOnSave": false
      }
    }
  },
  "postCreateCommand": "gcc --version && mpicxx --version && python3 --version && zsh --version && tree --version"
}
